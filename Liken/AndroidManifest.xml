<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liken"
    android:versionCode="4"
    android:versionName="1.0.3" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
 <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name="application.GlobalState"
        android:allowBackup="true"
        android:icon="@drawable/likemind_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Actionbar_likemind" >
        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" 
            android:screenOrientation="portrait"/>
            
            
        <activity
            android:name="com.liken.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
             android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.liken.TopicsActivity"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.liken.PhotoActivity"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.liken.ProfileOtherActivity"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.liken.AskerAnswerActivity"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.liken.AnswerActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.liken.MainActivity"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
        </activity>
          <activity
            android:name="com.liken.AnswersReceivedActivity"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.liken.AskActivity"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
             <intent-filter>
        <action android:name="android.intent.action.SEND" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="image/*" />
    </intent-filter>
    <intent-filter>
        <action android:name="android.intent.action.SEND" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="text/plain" />
    </intent-filter>
        </activity>
        <activity
            android:name="com.liken.AskNextActivity"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.liken.UploadTestActivity"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.liken.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.liken.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" 
             android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fbapp_id" />
    </application>

</manifest>